                        </ext:Row>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="responsive sample">
                <ScrollViewer>
                    <StackPanel>
                        <ext:Row MaxColumns="12" ColumnSpace="5" ColumnHeightInMobile="200">
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ColumnsInDesktop="4" ColumnsInHub="3">
                                <Grid Background="LightGray">
                                    <TextBlock Text="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ColumnsInDesktop="4" ColumnsInHub="3">
                                <Grid Background="LightGray">
                                    <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ColumnsInDesktop="4" ColumnsInHub="3">
                                <Grid Background="LightGray">
                                    <TextBlock Text="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ColumnsInDesktop="4" ColumnsInHub="3">
                                <Grid Background="LightGray">
                                    <TextBlock Text="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ColumnsInDesktop="4" ColumnsInHub="3">
                                <Grid Background="LightGray">
