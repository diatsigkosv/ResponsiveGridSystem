                            </ext:Column>
                            <ext:Column ColumnsInMobile="3" HideInDevice="DesktopUp">
                                <Grid Background="LightGray">
                                    <TextBlock Text="Desktop Up" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="3" HideInDevice="HubUp">
                                <Grid Background="LightGray">
                                    <TextBlock Text="Hub Up" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ext:Column>
                        </ext:Row>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="depth sample">
                <ScrollViewer>
                    <StackPanel>
                        <ext:Row MaxColumns="12" ColumnSpace="5" ColumnHeightInMobile="200">
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ForceHeightInMobile="200" ForceHeightInTablet="410">
                                <Grid Background="LightGray"/>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="12" ColumnsInTablet="6" ForceHeightInMobile="410">
                                <ext:Row ColumnSpace="5" ColumnHeightInMobile="200" Margin="-5">
                                    <ext:Column ColumnsInMobile="6" ColumnsInTablet="6">
                                        <Grid Background="DarkGray"/>
                                    </ext:Column>
                                    <ext:Column ColumnsInMobile="6" ColumnsInTablet="6">
                                        <Grid Background="DarkGray"/>
                                    </ext:Column>
                                    <ext:Column ColumnsInMobile="6" ColumnsInTablet="6">
                                        <Grid Background="DarkGray"/>
                                    </ext:Column>
                                    <ext:Column ColumnsInMobile="6" ColumnsInTablet="6">
                                        <Grid Background="DarkGray"/>
                                    </ext:Column>
                                </ext:Row>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="6" VerticalAlignment="Top">
                                <Grid Background="LightGray"/>
                            </ext:Column>
                            <ext:Column ColumnsInMobile="6" VerticalAlignment="Top">
                                <Grid Background="LightGray"/>
                            </ext:Column>
                        </ext:Row>
                    </StackPanel>
